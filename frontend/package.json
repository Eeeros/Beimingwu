{
  "name": "learnware",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --filter=./packages/** --parallel run dev",
    "dev:main": "pnpm -r --filter=./packages/proxy --filter=./packages/main --parallel dev",
    "dev:admin": "pnpm -r --filter=./packages/proxy --filter=./packages/admin --parallel dev",
    "build": "pnpm -r --filter=./packages/** --parallel run build",
    "build:main": "pnpm --filter main run build",
    "build:admin": "pnpm --filter admin run build",
    "lint": "eslint . --ext .js,.vue,.ts",
    "lint:fix": "eslint --fix . --ext .js,.vue,.ts",
    "prettier": "prettier --write .",
    "typecheck": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@beiming-system/hooks": "workspace:^",
    "@beiming-system/locale": "workspace:^",
    "chart.js": "^4.4.0",
    "dayjs": "^1.10.7",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "vue": "^3.2.47",
    "vue-chartjs": "^5.2.0",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6",
    "vuetify": "^3.1.13",
    "vuex": "^4.1.0",
    "vuex-persist": "^3.1.3"
  },
  "devDependencies": {
    "@beiming-system/types": "workspace:^",
    "@mdi/font": "^7.2.96",
    "@types/js-yaml": "^4.0.6",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "eslint": "^8.43.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-vue": "^9.15.0",
    "prettier": "^2.8.8",
    "sass": "^1.60.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-windicss": "^1.8.10",
    "vite-svg-loader": "^4.0.0",
    "vue-tsc": "^1.8.19",
    "windicss": "^3.5.6"
  }
}
